<Window x:Class="MedSoft.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Login" Height="300" Width="450">
    <Grid>
        <Canvas Background="White">
            <TextBox x:Name="txtUser" HorizontalAlignment="Left" Height="41" Margin="99,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="270" PreviewTextInput="txtUser_PreviewTextInput" />
            <Label Content="Usuario" HorizontalAlignment="Left" Margin="0,101,0,0" VerticalAlignment="Top" Height="41" Width="94"/>
            <Label Content="Medsoft" HorizontalAlignment="Left" VerticalAlignment="Top" Width="425" Canvas.Left="10" Canvas.Top="23"/>
            <PasswordBox x:Name="txtPass" HorizontalAlignment="Left" Height="41" Margin="99,183,0,0" VerticalAlignment="Top" Width="270"/>
            <Label Content="Contraseña" HorizontalAlignment="Left" Margin="0,183,0,0" VerticalAlignment="Top" Height="41" Width="94"/>
            <Button Content="Entrar" Foreground="White" HorizontalAlignment="Left" Margin="393,101,0,0" VerticalAlignment="Top" Width="52" Height="123" Click="Button_Click"/>
        </Canvas>
    </Grid>
</Window>
